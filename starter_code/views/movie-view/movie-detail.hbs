<div class="movie-page">
<div class="image">

<img src="{{movie.image}}" alt="{{movie.title}}" width="250px">
</div>
<div class="info">

<h1>{{movie.title}}</h1>
<h5>Director: {{movie.director}}</h5>
<p>{{movie.description}}</p>
<h4>

Cast
</h4>

{{#each movie.stars}}
<p>{{this}}</p>
{{/each}}
</div>
</div>